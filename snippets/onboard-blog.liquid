{% for i in (1..post_limit) %}
  {% capture current %}{% cycle 1, 2, 3, 4 %}{% endcapture %}
  {%- assign placeholder = 'collection-' | append: current -%}
  <div class="article-index {{ grid }} sm-span-12 auto" id="article" data-alpha="">
    <div class="article-info">
      <div class="article-info-inner">
        <h3><a href="#">{{ 'blogs.onboarding.title' | t }}</a></h3>
        {% if section.settings.show_date %}
          <p class="posted">{{ 'now' | date: format: 'month_date_year' }}</p>
        {% endif %}
        <div class="article-image onboard">
          <a href="#" title="">
            {{ placeholder | placeholder_svg_tag }}
          </a>
        </div>
        <div class="article-content">
          {{ 'blogs.onboarding.description' | t }}
        </div>
        <div class="readmore">
          <a href="">{{ 'blogs.article.read_more' | t }}</a>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
