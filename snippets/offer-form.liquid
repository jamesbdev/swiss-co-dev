<div class="offer-form-modal hidden" data-wau-modal-content="offer-form">
  <div class="enquiry-form" id="contactFormWrapper">
  {% form 'contact' %}
    <h2> {{ "sections.contact_form.make_an_offer" | t }} </h2>
    {{ form.errors | default_errors }}
    <p>{{ "sections.contact_form.make_offer_description" | t }} <strong>{{ product.title }}</strong> {{ "sections.contact_form.make_offer_description_end" | t }}</p>
    <div class="enquiry-first-row">
   <div class="first-name">
      <label for="first-name">First name</label>
      <input type="text" name="contact[first_name]" id="first-name" />
    </div>

    <div class="last-name">
      <label for="last-name">Last name</label>
      <input type="text" name="contact[last_name]" id="last-name" />
    </div>
    </div>
 
    <div class="enquiry-second-row"> 
    <div class="phone">
      <label for="phone">Phone</label>
      <input type="tel" name="contact[phone]" id="phone" />
    </div>

    <div class="email">
      <label for="email">Email</label>
      <input type="email" name="contact[email]" id="email" />
    </div>
    </div>

    <div class="offer">
      <label for="offer">{{ "sections.contact_form.offer" | t }}</label>
      <input type="text" name="contact[offer]" id="offer" />

    </div>

    <div class="message">
      <label for="message">Message</label>
      <textarea name="contact[body]" id="message"></textarea>
    </div>

    <div class="submit">
      <input type="submit" value={{ 'sections.contact_form.send_offer' | t  }} />
    </div>


  {%  endform %}
</div>
</div>
